<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BackgroundImage?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.Background?>
<StackPane alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
           fx:controller="controller.SceneController">

    <background>
        <Background>
            <backgroundImage>
                <BackgroundImage>
                    <image>
                        <Image url="@/ImmaginiCodex/codexLogo.png"/>
                    </image>
                    <backgroundSize>
                        <BackgroundSize width="100" height="100" contain="true" />
                    </backgroundSize>
                    <backgroundRepeat>
                        <BackgroundRepeat repeatX="NO_REPEAT" repeatY="NO_REPEAT"/>
                    </backgroundRepeat>
                    <backgroundPosition>
                        <BackgroundPosition align="CENTER" />
                    </backgroundPosition>
                </BackgroundImage>
            </backgroundImage>
        </Background>
    </background>

    <VBox alignment="CENTER" spacing="20">
        <children>
            <Button text="Start new game" onAction="#handleStartButtonAction"/>
        </children>
    </VBox>

</StackPane>
